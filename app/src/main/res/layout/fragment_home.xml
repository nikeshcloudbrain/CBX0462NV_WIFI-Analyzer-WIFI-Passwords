<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment">

<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/banner"
            android:layout_margin="@dimen/_10sdp"
            android:adjustViewBounds="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/f1"
            android:fontFamily="@font/plus_medium"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:lineSpacingExtra="@dimen/_2sdp"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mainbackground"
        android:backgroundTint="@color/white"
        android:elevation="@dimen/_1sdp"
        android:orientation="vertical"
        android:layout_margin="10dp">
        <com.google.android.material.tabs.TabLayout

            android:id="@+id/tab"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_margin="10dp"
            android:background="@android:color/transparent"
            app:tabBackground="@drawable/bg_tab_background"
            app:tabGravity="fill"
            app:tabIndicatorFullWidth="false"
            app:tabIndicatorHeight="0dp"
            app:tabMode="fixed"
            app:tabRippleColor="@null"
            app:tabSelectedTextColor="@color/white"
            app:tabTextAppearance="@style/tab_text"
            app:tabTextColor="#828282"
            />
        <androidx.viewpager2.widget.ViewPager2
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/wPager"/>
        
    </LinearLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewAdsMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_3sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardElevation="@dimen/_3sdp">

            <FrameLayout
                android:id="@+id/frameViewAdsMain"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_210sdp"
                android:orientation="vertical"
                android:visibility="gone" />

        </androidx.cardview.widget.CardView>
 
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Some Wi-fi Information"
    android:textStyle="bold"
    android:textSize="@dimen/_20sdp"
    android:textColor="@color/black"
    android:layout_margin="10dp"
    android:fontFamily="@font/plus_semibold"
    android:layout_gravity="left|top"/>

    <TextView
        android:id="@+id/AutoConnect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Auto Connect Preference"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/main_txt"
        android:fontFamily="@font/plus_semibold"
        android:paddingHorizontal="40dp"
        android:paddingVertical="@dimen/_10sdp"
        android:layout_gravity="center|top"/>

    <TextView
        android:id="@+id/whoSame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Who's on my Wifi?"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/main_txt"
        android:fontFamily="@font/plus_semibold"
        android:paddingHorizontal="40dp"
        android:paddingVertical="@dimen/_10sdp"
        android:layout_gravity="center|top"/>



    </LinearLayout>

</androidx.core.widget.NestedScrollView>


</FrameLayout>